{
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
    ],
    "[vue]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "todo-tree.highlights.defaultHighlight": {
      "type": "whole-line",
      "fontWeight": "600",
      "foreground": "#0B132B",
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "icon": "alert",
            "iconColour": "#FBB02D",
            "background": "#FBB02D",
        },
        "FIXME": {
            "iconColour": "#FB6107",
            "background": "#FB6107",
            "gutterIcon": true
        },
        "NOTE": {
          "icon": "eye",
          "iconColour": "#5BC0BE",
          "background": "#5BC0BE",
        },
        "ALERT": {
          "icon": "alert",
          "iconColour": "#FF6347",
          "background": "#FF6347",
        }
  
        
    },
    "todo-tree.general.tags": [
      "FIXME",
      "TODO",
      "NOTE",
      "ALERT",
    ],
    "i18n-ally.localesPaths": "src/locales",
    "files.eol": "\n",
    "i18n-ally.keystyle": "nested",
    "vetur.validation.template": false,
    "css.lint.unknownAtRules": "ignore",
    "css.validate": true,
    "stylelint.config": {
      "rules": {
        "at-rule-no-unknown": [true, {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "layer",
            "variants",
            "responsive",
            "screen"
          ]
        }],
        "declaration-block-trailing-semicolon": null,
        "no-descending-specificity": null
      }
    }
  }